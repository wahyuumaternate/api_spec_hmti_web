        "tags": ["news"],
        "summary": "Mengambil news by slug",
        "description": "Mengambil data 1 news berdasarkan slug",
        "parameters": [
          {
            "name": "slug",
            "in": "path",
            "description": "Slug news",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Ok",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "number"
                        },
                        "title": {
                          "type": "string"
                        },
                        "image_url": {
                          "type": "string"
                        },
                        "body": {
                          "type": "string"
                        },
                        "category_id": {
                          "type": "number"
                        },
                        "author_id": {
                          "type": "number"
                        },
                        "author_name": {
                          "type": "string"
                        },
                        "created_at": {
                          "type": "string"
                        },
                        "updated_at": {
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "examples": {
                  "validationerror": {
                    "description": "Gagal menghapus news",
                    "value": {
                      "errors": ["news tidak ditemukan", "Input tidak valid"]
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "examples": {
                  "servererror": {
                    "description": "Internal server error",
                    "value": {
                      "errors": ["Internal server error"]
                    }
                  }
                }
              }
            }
          }
        }
      }
    },

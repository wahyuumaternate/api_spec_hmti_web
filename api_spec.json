                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "examples": {
                  "validationerror": {
                    "description": "Gagal menambahkan kategori news",
                    "value": {
                      "errors": ["Input tidak valid", "Kategori sudah ada"]

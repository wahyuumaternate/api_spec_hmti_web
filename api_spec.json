{
  "openapi": "3.0.2",
  "info": {
    "title": "API SPEC WEBSITE HMTI",
    "description": "Api spec untuk website HMTI & dashboard",
    "version": "1.0"
  },
  "servers": [{ "url": "https://backend-web.htmi-unkhair.my.id/api/" }],
  "tags": [
    {
      "name": "AUTH",
      "description": "Fitur authentication"
    },
    {
      "name": "news",
      "description": "Fitur news"
    }
  ],
  "paths": {
    "/login": {
      "post": {
        "tags": ["AUTH"],
        "summary": "Login ",
        "description": "User [Admin & Humas] melakukan login menggunakan kredensial (akun)",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email", "password"],
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Ok",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "number"
                        },
                        "username": {
                          "type": "string"
                        },
                        "email": {
                          "type": "string"
                        },
                        "password": {
                          "type": "string"
                        },
                        "token": {
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "examples": {
                  "validationerror": {
                    "description": "login gagal, input tidak valid",
                    "value": {
                      "errors": [
                        "Email tidak dapat ditemukan",
                        "Email atau password tidak valid"
                      ]
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "examples": {
                  "servererror": {
                    "description": "Internal server error",
                    "value": {
                      "errors": ["Internal server error"]
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/forgot-password": {
      "post": {
        "tags": ["AUTH"],
        "summary": "Mengirim link reset password ke email",
        "description": "User [Admin & Humas] melakukan forgot password, link reset password dikirim ke email untuk mengubah password",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email"],
                "properties": {
                  "email": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Ok",
            "content": {
              "application/json": {
                "examples": {
                  "success": {
                    "description": "Link reset password berhasil dikirim ke email",
                    "value": {
                      "data": {
                        "messages": ["Email berhasil terkirim"]
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "examples": {
                  "validationerror": {
                    "description": "forgot password gagal, input tidak valid",
                    "value": {
                      "errors": {
                        "email": ["Email tidak dapat ditemukan"]
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "examples": {
                  "servererror": {
                    "description": "Internal server error",
                    "value": {
                      "errors": ["Internal server error"]
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/reset-password": {
      "patch": {
        "tags": ["AUTH"],
        "summary": "Mengubah password user",
        "description": "User [Admin & Humas] melakukan reset password dengan mengisi password baru",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["password", "confirmPassword"],
                "properties": {
                  "password": {
                    "type": "string"
                  },
                  "confirmPassword": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Ok",
            "content": {
              "application/json": {
                "examples": {
                  "success": {
                    "description": "Reset password berhasil",
                    "value": {
                      "data": ["Password berhasil diubah"]
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "examples": {
                  "validationerror": {
                    "description": "Validation error",
                    "value": {
                      "errors": [
                        "password atau confirmPassword boleh kosong",
                        "password min 8 karakter",
                        "password dan confirm password tidak sama"
                      ]
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "examples": {
                  "servererror": {
                    "description": "Internal server error",
                    "value": {
                      "errors": ["Internal server error"]
                    }
                  }
                }
              }
            }
          }
        }
      }
    },

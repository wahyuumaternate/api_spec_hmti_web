          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["title", "body", "image_url", "category_id"],
                "properties": {
                  "title": {
                    "type": "string"
                  },
                  "body": {
                    "type": "string"
                  },
                  "image_url": {
                    "type": "string"
                  },
                  "category_id": {
                    "type": "number"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Ok",
            "content": {
              "application/json": {
                "examples": {
                  "Created": {
                    "description": "Berhasil mengubah news",
                    "value": {
                      "data": ["Berhasil mengubah news"]
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "examples": {
                  "validationerror": {
                    "description": "Gagal mengubah news",
                    "value": {
                      "errors": ["Input tidak valid", "Gambar tidak valid"]
                    }
                  }
                }
              }
